{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "jsx": "react",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}